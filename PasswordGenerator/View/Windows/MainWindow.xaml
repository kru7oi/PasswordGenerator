<Window x:Class="PasswordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordGenerator"
        mc:Ignorable="d"
        Title="Генератор паролей" Height="600" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        
        <!-- #region Настройки генерации -->
        <GroupBox Header="Настройки пароля" BorderBrush="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width=".5*" />
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Длина пароля"/>
                        <Separator Width="10" Height="0" />
                        <Slider Minimum="3" Maximum="32" Width="100"/>
                        <Separator Width="10" Height="0" />
                        <TextBox Name="PasswordLengthTb" Width="30" Text="32"/>
                    </StackPanel>

                    <CheckBox Grid.Row="2" Content="Цифры"/>
                    <CheckBox Grid.Row="4" Content="Символы"/>
                    <CheckBox Grid.Row="6" Content="Верхний регистр"/>
                    <CheckBox Grid.Row="8" Content="Нижний регистр"/>
                    <CheckBox Grid.Row="10" Content="Слова"/>

                    <StackPanel Grid.Row="12"  Orientation="Horizontal">
                        <TextBlock Text="Кол-во паролей" />
                        <Separator Width="10" Height="0" />
                        <TextBox Width="30" Text="3" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Image Source="/Resources/Images/question.png" />
                    <TextBlock Grid.Row="2" Text="Надёжный"/>
                    <Button Name="GenerateBtn" Grid.Row="4" Content="Генерация" Click="GenerateBtn_Click"/>
                </Grid>
            </Grid>
        </GroupBox>
        <!-- #endregion -->

        <!-- #region Список паролей -->
        <ListBox Name="PasswordsLb" Grid.Row="2">
            
        </ListBox>
        <!-- #endregion -->
    </Grid>
</Window>
